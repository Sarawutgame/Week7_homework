pipeline {
    agent any

    stages {
        
        stage('Welcome to master homework'){
            steps{
                echo 'Start Program HomeWork'
            }
        }

        

        stage('Tigger the Slave Homework Jobs') {
            steps {
                script {
                    data = readFile(file: 'Data.json')
                    data_map = new groovy.json.JsonSlurper().parseText(data)
                    convert = new HashMap<>(data_map)
                    println(convert)
                }
                echo 'Start Trigger to send name and age to slave'
                build job: 'slave_homework', parameters: [string(name: 'NAME', value: convert.NAME), string(name: 'Ages', value: convert.AGE)]
            }
        }
    }
}
